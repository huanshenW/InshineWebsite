<% include ../../../partials/manageHeader %>


            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Edit Comment</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <!--<div class="panel-heading">-->
                        <!--    Student Enroll Form-->
                        <!--</div>-->
                        <div class="panel-body">
                            <div class="row">
                                <form role="form" action="/manage/note/event/<%=event._id%>?_method=PUT" method="POST">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <h4><strong>Student Name:   </strong><%=event.student.name%></h4>                                                 
                                            <h4><strong>Type:   </strong><%=event.eventType%></h4>                                            
                                            <h4><strong>Time:   </strong><%=event.time%></h4>                                            
                                        </div>
                                        <div class="form-group">
                                            <label><h4>Comment</h4></label>
                                            <textarea class="form-control" rows="5" name="comment" value="<%=event.comment%>"><%=event.comment%></textarea>
                                        </div>
                                        <hr>
                                        <a href="javascript:history.back()"><button class="btn btn-primary">Go Back</button></a>
                                        <button type="submit" class="btn btn-primary">Submit Button</button>
                                    </div>
                                    <input type="hidden" name="commenter" value="<%= currentUser.username %>">
                                    <input type="hidden" name="eventFlag" value="<%= eventFlag %>">
                                    <input type="hidden" name="referer" value="<%= referer %>">
                                    <input type="hidden" name="isReset" value="<%= isReset %>">
                                </form>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

<% include ../../../partials/manageFooter %>