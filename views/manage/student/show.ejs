<% include ../../partials/manageHeader %>


        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"><%=student.name%>'s Profile</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Student Profile
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                 <ul>
                                    <li>Name:<%=student.name%></li>
                                    <li>Gender:<%=student.gender%></li>
                                    <li>Age:<%=student.age%></li>
                                    <li>Class Number:<%=student.classNumber%></li>
                                    <li>Primary Contact Person:<%=student.contact1%></li>
                                    <li>Phone Number:<%=student.phone1%></li>  
                                    <li>Secondary Contact Person:<%=student.contact2%></li>
                                    <li>Phone Number:<%=student.phone2%></li>
                                    <li>Enrolled Time:<%=student.timeEnrolled%></li>
                                    <li>Noon Care:<%=student.isNoonCare%></li>
                                    <li>Afternoon Care:<%=student.isAfternoonCare%></li>
                                    <li>Notes:<%=student.note%></li>
                                    <form style="display: inline" action="/manage/student/<%= student._id %>/edit" method="GET">
                                        <button class="btn btn-xs btn-warning">Edit</button>                                                    
                                    </form>
                                </ul> 
                                <a href="javascript:history.back()">Go Back</a>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            
            
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Events List
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Event Type</th>
                                        <th>Clock-In Time</th>
                                        <th>Operator</th>
                                        <th>Comment</th>
                                        <th>Supervisor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i = student.footprint.length - 1; i >=0; i--) { %>
                                        <% var event = student.footprint[i]; %>
                                        <tr>
                                            <td><%= event.eventType %></td>
                                            <td><%= event.time %></td>
                                            <td><%= event.operator %></td>
                                            <td>
                                                <% if (event.comment) { %>
                                                    <%= event.comment %>
                                                <% } else {%>
                                                    -
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (event.supervisor) { %>
                                                    <%= event.supervisor %>
                                                <% } else {%>
                                                    -
                                                <% } %>
                                            </td>
                                        </tr>                                        
                                    <% }; %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

<% include ../../partials/manageFooter %>